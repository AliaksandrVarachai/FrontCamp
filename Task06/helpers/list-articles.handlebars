{{#each articles}}
<article>
    <header>
        <div class="title">{{title}}</div>
        <div class="author">{{authorName}}</div>
        <div class="date">{{formattedDate}}</div>
    </header>
    <menu>
        <button id="show-article-{{_id}}">Show article</button>
    </menu>
    <div class="article-text">
        {{text}}
    </div>
</article>
{{/each}}